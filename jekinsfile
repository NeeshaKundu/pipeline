node {
   stage('Clone') {
       git 'https://github.com/NeeshaKundu/pipeline.git'
   }
   stage('Build') {
       echo 'Building the application...'
       // Example: sh 'npm install' or 'mvn package'
   }
   stage('Test') {
       echo 'Running tests...'
       // Example: sh 'npm test'
   }
   stage('Deploy') {
       echo 'Deploying application...'
       // Example: sh './deploy.sh' or rsync/scp
   }
}
